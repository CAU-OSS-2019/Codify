{
  "name": "Codify",
  "version": "1.0",
  "description": "Auto Code Detection and Highlight + Edit and Compile Code on Chrome",
  "permissions": ["contextMenus", "storage", "tabs", "activeTab", "notifications"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    }
  },
  "content_scripts":[
    {
      "all_frames": true,
      "matches": ["*://*/*"],
      "js": ["hljs.js", "detect1.js", "js/jquery-3.4.1.min.js", "click-to-codify.js", "util.browser.js"],
      "run_at": "document_end",
      "css": ["newButtonStyle.css", "css/all.min.css", "codify-selector.css", "github.min.css"]
    }
  ],
  "web_accessible_resources": [
      "webfonts/*.*"
  ],
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'",

  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "manifest_version": 2
}
